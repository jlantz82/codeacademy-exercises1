//passwd needs to have an uppercase letter
//passwd needs to have a lowercase letter
//passwd needs to have at least 8 characters
//passwd needs to have a special character
//needs to report to user if it's complex enough/tells them what they are missing

function hasUppercase(input){
  for (let i = 0; i < input.length; i++) {
    if (input[i] === input[i].toUpperCase()) {
      return true
    }
  }
}

function hasLowercase(input) {
  for (let i = 0; i < input.length; i++) {
    if (input[i] === input[i].toLowerCase()) {
      return true
    }
  }
}

function isLongEnough(input) {
  if (input.length >= 8) {
    return true
  }
}

let specialCharacters = ["!", "@", "#", "$", "%", "^", "&", "*"];

function hasSpecialCharacter(input) {
  for (let i = 0; i < input.length; i++) {
    for (let j = 0; j < specialCharacters.length; j++) {
      if (input[i] === specialCharacters[j]) {
        return true
      }
    }
  }
}

function isPasswdValid(input) {
  if (hasUppercase(input) === true && hasLowercase(input) === true && isLongEnough(input) === true && hasSpecialCharacter(input) === true) {
    console.log(`the password is valid`)
  }
  if (!hasUppercase(input)) {
    console.log(`the password needs a capital letter`)
  }
  if (!hasLowercase(input)) {
    console.log(`the password needs a lower case letter`)
  }
  if (!isLongEnough(input)) {
    console.log(`the password must be at least 8 characters`)
  }
  if (!hasSpecialCharacter(input)) {
    console.log(`the password must have a special character`)
  }
  }
   


isPasswdValid("superpassword")
